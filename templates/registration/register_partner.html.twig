{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1>Inscpription envoyé par mail aux Franchisés</h1>
	<h2>Vous avez reçu notre message de confirmation d'inscription.</h2>
	<h3>Merci de remplir ce formulaire et de bien renseigner votre type de contrat suivi du nom de votre société.</h3>
	{{ form_start(registrationForm) }}

	{{ form_row(registrationForm.name) }}
	{{ form_row(registrationForm.contact) }}
	<p class="mt-4">Merci de renseigner votre type de contrat suivi du nom de votre société.</p>

	{{ form_row(registrationForm.contract) }}


	{{ form_row(registrationForm.address) }}
	{{ form_row(registrationForm.zipcode) }}
	{{ form_row(registrationForm.city) }}


	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn btn-primary btn-lg mt-4">Valider</button>

	{{ form_end(registrationForm) }}
{% endblock %}
