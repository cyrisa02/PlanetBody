{% block title %}New Mailing
{% endblock %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success mt-4">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('danger') %}
		<div class="alert alert-success mt-4">
			{{ message }}
		</div>
	{% endfor %}

	<h1>Create new Mailing</h1>

	{{ include('pages/mailing/_form.html.twig') }}

	<a href="{{ path('app_mailing_index') }}">back to list</a>
{% endblock %}
