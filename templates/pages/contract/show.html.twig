{% extends 'base.html.twig' %}

{% block title %}Contrat
{% endblock %}

{% block body %}
	<h1>Contrat</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ contract.id }}</td>
			</tr>
			<tr>
				<th>Nom du contrat</th>
				<td>{{ contract.name }}</td>
			</tr>
			<tr>
				<th>Nom du franchisé</th>
				<td>{{ contract.customer }}</td>
			</tr>
			<tr>
				<th>Nombre de salle de sport</th>
				<td>{{ contract.structureNb }}</td>
			</tr>
			<tr>
				<th>Tarif TTC/mois</th>
				<td>{{ contract.price }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_contract_index') }}">Retour à la liste</a>


	<a class="btn btn-primary btn-lg mt-4" href="{{ path('app_contract_edit', {'id': contract.id}) }}">Modifier</a>


	{{ include('pages/contract/_delete_form.html.twig') }}
{% endblock %}
