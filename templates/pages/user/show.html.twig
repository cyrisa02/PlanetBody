{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}


	<div class="container mt-4">
		<h1>Mon Compte</h1>


		{% if app.user %}
			{% if is_granted('ROLE_SPORTHALL') %}
				{% if  user.sporthalls.isEnable == false or app.user.sporthalls.isEnable is not defined %}

					<h3>Merci de votre inscription, nous traitons votre demande.</h3>


					<div class="mb-4">
						<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_logout') }}">Me déconnecter</a>
					</div>


				{% endif %}
				{% if user.sporthalls.isEnable == true %}
					<table class="table">
						<tbody>
							<tr>
								<th>N°</th>
								<td>{{ user.id }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ user.email }}</td>
							</tr>

							<tr>
								<th>Société</th>
								<td>{{ user.name }}</td>
							</tr>
							<tr>
								<th>Adresse</th>
								<td>{{ user.address }}</td>
							</tr>
							<tr>
								<th>Code Postal</th>
								<td>{{ user.zipcode }}</td>
							</tr>
							<tr>
								<th>Ville</th>
								<td>{{ user.city }}</td>
							</tr>

							<tr>
								<th>Contact</th>
								<td>{{ user.contact }}</td>
							</tr>
							<tr>
								<th>Options</th>
								<td>
									{% for permission in permissions %}
										{{ permission.name }}
										-(
										{{ permission.isEnable ? 'Active' : 'Désactivée' }}
										)-
																																																																																																																																																																																																																																																																																																																																																																																																																																																								/
									{% endfor %}
								</td>
							</tr>
						</tbody>
					</table>
				{% endif %}
			{% endif %}
			{% if is_granted('ROLE_PARTNER') %}
				{% if  user.partners.isEnable == false %}
					<h3>Merci de votre inscription, nous traitons votre demande.</h3>

					<div class="mb-4">
						<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_logout') }}">Me déconnecter</a>
					</div>


				{% endif %}
				{% if user.partners.isEnable == true %}
					<table class="table">
						<tbody>
							<tr>
								<th>N°</th>
								<td>{{ user.id }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ user.email }}</td>
							</tr>

							<tr>
								<th>Société</th>
								<td>{{ user.name }}</td>
							</tr>
							<tr>
								<th>Adresse</th>
								<td>{{ user.address }}</td>
							</tr>
							<tr>
								<th>Code Postal</th>
								<td>{{ user.zipcode }}</td>
							</tr>
							<tr>
								<th>Ville</th>
								<td>{{ user.city }}</td>
							</tr>

							<tr>
								<th>Contact</th>
								<td>{{ user.contact }}</td>
							</tr>
							<tr>
								<th>Options</th>
								<td>
									{% for permission in permissions %}
										{{ permission.name }}
										-(
										<b>{{ permission.isEnable ? 'Active' : 'Désactivée' }}</b>

										)- /
									{% endfor %}
								</td>
							</tr>
							<tr>
								<th>Structures</th>
								<td>
									{% for sporthall in user.partners.sporthalls %}
										{{ sporthall.user.name }}
										-(
										<b>{{ sporthall.isEnable ? 'Active' : 'Désactivée' }}</b>

										)- /
									{% endfor %}
								</td>
							</tr>

						</tbody>
					</table>
				{% endif %}


			{% endif %}


		{% endif %}


		<a href="{{ path('home.index') }}">Retour accueil</a>

		{# <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
																																																																																																																	
																																																																																																																			{{ include('pages/user/_delete_form.html.twig') }}</div> #}

	{% endblock %}
